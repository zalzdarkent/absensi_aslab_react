# n8n Local Development Environment Variables

# Database connection (pakai MySQL yang sama dengan Laravel)
DB_TYPE=mysqldb
DB_MYSQLDB_HOST=localhost
DB_MYSQLDB_PORT=3306
DB_MYSQLDB_DATABASE=n8n_local
DB_MYSQLDB_USER=root
DB_MYSQLDB_PASSWORD=password

# n8n Settings
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=n8n2025

# Webhook URL
WEBHOOK_URL=http://localhost:5678

# Timezone
GENERIC_TIMEZONE=Asia/Jakarta

# Disable telemetry
N8N_DIAGNOSTICS_ENABLED=false

# Port
N8N_PORT=5678

# Laravel Integration
LARAVEL_API_URL=http://localhost:8000/api
LARAVEL_WEBHOOK_SECRET=your_webhook_secret_here