@startuml Proses Absensi RFID
!theme plain

title Activity Diagram - Proses Absensi RFID

|Aslab / Admin|
start

if (Membawa RFID Card?) then (Ya)
  :Scan RFID Card;

  |Sistem|
  :Validasi RFID & User;
  
  if (RFID Valid?) then (Ya)
    :Cek Status Absensi\nHari Ini;
    
    if (Sudah Check-in?) then (Belum)
      :Simpan Data Check-in;
      :Tampilkan Pesan Sukses\n"Selamat Datang";
      |Asisten / Admin|
      stop
    else (Sudah)
      if (Sudah Check-out?) then (Belum)
        |Sistem|
        :Simpan Data Check-out;
        :Tampilkan Pesan Sukses\n"Sampai Jumpa";
        |Asisten / Admin|
        stop
      else (Sudah)
        |Sistem|
        :Tampilkan Error\n"Sudah Absen Lengkap";
        |Asisten / Admin|
        stop
      endif
    endif
  else (Tidak)
    :Tampilkan Error\n"RFID Tidak Terdaftar";
    |Asisten / Admin|
    stop
  endif

else (Tidak)
  |Asisten / Admin|
  :Melapor ke Admin untuk\nAbsensi Manual;
  :Admin Input Absensi\nManual;
  
  |Sistem|
  :Validasi & Simpan\nAbsensi Manual;
  :Tampilkan Status\nAbsensi Manual;
  |Asisten / Admin|
  stop
endif

@enduml
